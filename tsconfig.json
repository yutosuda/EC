{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["./shared/*"]
    }
  },
  "references": [
    {
      "path": "./frontend"
    },
    {
      "path": "./backend"
    }
  ],
  "include": [
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "backend"
  ]
}
