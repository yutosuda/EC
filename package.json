{
  "name": "ec",
  "version": "1.0.0",
  "description": "建設資材ECサイト",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "backend:dev": "nodemon --watch src/backend src/backend/server.ts",
    "backend:build": "tsc -p src/backend/tsconfig.json",
    "backend:start": "node src/backend/dist/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run backend:dev\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest --testPathPattern=src/backend",
    "test:validation": "jest --testPathPattern=src/backend/tests/validation",
    "test:error": "jest --testPathPattern=src/backend/tests/error",
    "test:models": "ts-node src/backend/tests/models/testDataModels.ts",
    "test:api": "jest --testPathPattern=src/backend/tests/api.test.ts",
    "test:integration": "jest --config tests/integration/jest.config.js",
    "test:integration:watch": "jest --config tests/integration/jest.config.js --watch",
    "test:integration:coverage": "jest --config tests/integration/jest.config.js --coverage",
    "test:integration:simple": "jest --config tests/integration/jest.config.js tests/integration/product.simple.test.ts",
    "test:integration:comprehensive": "jest --config tests/integration/jest.config.js tests/integration/product.comprehensive.test.ts",
    "test:integration:all": "jest --config tests/integration/jest.config.js 'tests/integration/.*\\.test\\.ts'",
    "test:e2e": "jest --config tests/e2e/jest.config.js",
    "clean": "rm -rf .next src/backend/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yutosuda/EC.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yutosuda/EC/issues"
  },
  "homepage": "https://github.com/yutosuda/EC#readme",
  "dependencies": {
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.0",
    "next": "^15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "stripe": "^15.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^5.8.3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.7",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/backend/**/*.ts",
      "!src/backend/**/*.d.ts",
      "!src/backend/**/index.ts",
      "!src/backend/tests/**/*.ts"
    ]
  }
}
